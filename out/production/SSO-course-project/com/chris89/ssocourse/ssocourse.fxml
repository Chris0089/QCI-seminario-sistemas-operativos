                    <TextField fx:id="currentAppGUI" editable="false" GridPane.columnIndex="1" />
                    <TextField fx:id="quantumGUI" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </children>
            </GridPane>
            <GridPane GridPane.columnIndex="1" GridPane.rowIndex="2">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
