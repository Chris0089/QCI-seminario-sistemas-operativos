                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Button fx:id="upQuantumBtn" mnemonicParsing="false"  text="Incrementar Quantum" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
